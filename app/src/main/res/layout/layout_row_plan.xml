<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="?attr/selectableItemBackground"
    android:elevation="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plan_row_title"
            android:id="@+id/tvTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvStart"
            android:layout_below="@id/tvTitle"
            android:text="Starting Date: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:id="@+id/tvDateStart"
            android:layout_toEndOf="@id/tvStart"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEnd"
            android:layout_below="@id/tvStart"
            android:text="Ending Date: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDateEnd"
            android:layout_below="@id/tvStart"
            android:layout_toEndOf="@id/tvEnd"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plan_row_from"
            android:layout_alignParentEnd="true"
            android:id="@+id/tvFrom"
            android:layout_alignBottom="@id/tvEnd"
            android:ellipsize="end"
            android:maxLines="1"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>